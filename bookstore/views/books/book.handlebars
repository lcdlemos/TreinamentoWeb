<div class="book-page">
    <a href="/books">Voltar</a>
    <h1>{{book.name}}</h1>
    <p>Autor: {{book.author}}</p>
    <p>Preço: R${{book.price}}</p>
    <img src="{{book.image}}" alt="{{book.name}}">
    <p>Descrição: {{book.description}}</p>
    <form action="/books/remove/{{book._id}}" method="POST">
        <input type="submit" value="Excluir" class="btn">
    </form>
</div>