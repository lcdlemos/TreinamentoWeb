<h1>Livros</h1>
<div class="books">
    {{#each books}}
    <div class="book">
        <img src="{{this.image}}" alt="{{this.name}}">
        <h3>
            {{this.name}}
            <p>{{this.author}}</p>
        </h3>
        <p>R$ {{this.price}}</p>
        <div class="actions">
            <a href="/books/{{this._id}}">Detalhes</a>
            <a href="/books/edit/{{this._id}}">Editar</a>
        </div>
    </div>
    {{/each}}
</div>